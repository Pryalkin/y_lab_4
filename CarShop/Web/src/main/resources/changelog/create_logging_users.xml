<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        logicalFilePath="db/changelog/changelog.xml">
    <changeSet id="create_table_logging_users" author="pryalkinpp">
        <createTable tableName="logging_users">
            <column autoIncrement="true" name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="userId" type="varchar(255)"/>
            <column name="action" type="varchar(255)"/>
            <column name="date" type="varchar(255)"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="logging_users" baseColumnNames="userId" constraintName="fk_users_logging_users" referencedTableName="users"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>